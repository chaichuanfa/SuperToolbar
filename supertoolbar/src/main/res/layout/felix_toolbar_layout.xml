<?xml version="1.0" encoding="utf-8"?>
<merge
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:showIn="@layout/base_felix_toolbar_layout"
        >

    <TextView
            android:id="@+id/mLeftButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="60dp"
            android:gravity="center_vertical"
            android:textColor="@color/felix_bar_font_default_color"
            android:textSize="@dimen/felix_bar_button_font_size"
            android:paddingLeft="12dp"
            android:paddingRight="8dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:drawablePadding="4dp"
            android:background="@drawable/felix_left_button_bg_selector"
            tools:drawableLeft="@drawable/iv_back"
            />

    <TextView
            android:id="@+id/mTvTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/felix_bar_title_font_size"
            android:textColor="@color/felix_bar_font_default_color"
            tools:text="title"
            />

    <TextView
            android:id="@+id/mRightButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="60dp"
            android:gravity="center_vertical|right"
            android:textColor="@color/felix_bar_font_default_color"
            android:textSize="@dimen/felix_bar_button_font_size"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_gravity="right"
            android:paddingRight="12dp"
            android:paddingLeft="8dp"
            android:drawablePadding="4dp"
            android:background="@drawable/felix_right_button_bg_selector"
            tools:text="dddddddd"
            />

    <View
            android:id="@+id/mDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:maxHeight="5dp"
            android:visibility="gone"
            android:layout_gravity="bottom"
            android:background="@color/default_divider_color"
            tools:visibility="visible"
            />

</merge>